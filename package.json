{
  "name": "pota-notification-electron",
  "version": "1.1.1",
  "description": "POTA Notification - Desktop notification for POTA spots with filter",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish=never",
    "build:win:portable": "electron-builder --win portable --publish=never"
  },
  "keywords": [
    "pota",
    "electron",
    "ham-radio"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.pota.notification",
    "productName": "POTA Notification",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "filter.js",
      "voicevox.js",
      "settings.html",
      "settings.js",
      "voicevox-settings.html",
      "voicevox-settings.js",
      "notification.html",
      "notification.js",
      "icon.png",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {}
}

